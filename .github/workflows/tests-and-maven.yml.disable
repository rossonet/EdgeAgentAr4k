name: Gradle test and build maven archive

on:
  push:
    branches:
    - master

jobs:
  build:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v1
    - name: Set up JDK 1.8
      uses: actions/setup-java@v1
      with:
        java-version: 1.8
    - name: Build with Gradle
      env:
        PASSWORD: ${{ secrets.GITHUB_TOKEN }}
        USERNAME: ${ GITHUB_ACTOR }
      run: ./gradlew clean test buildAllBootJars publish --info
